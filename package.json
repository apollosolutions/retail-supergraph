{
  "name": "@apollosolutions/media-supergraph",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=dev nodemon dev.js",
    "start": "node prod.js",
    "router": "eval $(grep '^APOLLO_KEY' .env) APOLLO_GRAPH_REF=Media-Graph-Demo@current ./router --config ./router-config/router-config.yaml",
    "publish:subgraph-media": "rover subgraph publish Media-Graph-Demo@current --name media --schema ./subgraphs/media/schema.graphql --routing-url http://localhost:4001/media/graphql",
    "publish:subgraph-user": "rover subgraph publish Media-Graph-Demo@current --name users --schema ./subgraphs/users/schema.graphql --routing-url http://localhost:4001/users/graphql",
    "health-check": "curl -H 'content-type: application/json' http://localhost:4000/graphql?query=%7B__typename%7D",
    "test": "npm run test:compile && npm run test:runtime",
    "test:runtime": "start-server-and-test dev http-get://localhost:4000/?query={__typename} health-check",
    "test:compile": "tsc"
  },
  "dependencies": {
    "@apollo/gateway": "^2.2.3",
    "@apollo/server": "^4.7.1",
    "@apollo/subgraph": "^2.2.3",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "dotenv": "^16.1.3",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.20",
    "start-server-and-test": "^1.15.2",
    "typescript": "^4.9.4"
  },
  "nodemonConfig": {
    "ext": "js,json,graphql"
  }
}
